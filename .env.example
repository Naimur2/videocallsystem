# ======================
# PRODUCTION ENVIRONMENT VARIABLES TEMPLATE
# Copy this to .env and update with your actual values
# ======================

# Application Settings
NODE_ENV=production
PORT=3001

# MediaSoup Configuration
MEDIASOUP_LISTEN_IP=0.0.0.0
MEDIASOUP_ANNOUNCED_IP=YOUR_PUBLIC_IP_OR_DOMAIN
RTC_MIN_PORT=40000
RTC_MAX_PORT=49999

# Database Configuration
POSTGRES_HOST=your-rds-endpoint.region.rds.amazonaws.com
POSTGRES_PORT=5432
POSTGRES_DB=mediasoup
POSTGRES_USER=mediasoup
POSTGRES_PASSWORD=your-secure-database-password

# Redis Configuration
REDIS_HOST=your-elasticache-endpoint.region.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password

# Security
JWT_SECRET=your-very-secure-jwt-secret-key-here-64-characters-minimum
SESSION_SECRET=your-very-secure-session-secret-key-here-64-characters-minimum

# TURN Server Configuration
TURN_SERVER=standard.relay.metered.ca:80
TURN_USERNAME=your-turn-username
TURN_CREDENTIAL=your-turn-credential

# Metered TURN Server Configuration (legacy compatibility)
METERED_TURN_USERNAME=your-turn-username
METERED_TURN_CREDENTIAL=your-turn-credential
NEXT_PUBLIC_METERED_TURN_USERNAME=your-turn-username
NEXT_PUBLIC_METERED_TURN_CREDENTIAL=your-turn-credential

# Frontend URLs
NEXT_PUBLIC_BACKEND_URL=https://your-domain.com/api
NEXT_PUBLIC_SOCKET_URL=wss://your-domain.com
NEXT_PUBLIC_TURN_SERVER=standard.relay.metered.ca:80
NEXT_PUBLIC_TURN_USERNAME=your-turn-username
NEXT_PUBLIC_TURN_CREDENTIAL=your-turn-credential

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_LOGGING=true

# CORS Configuration
CORS_ORIGIN=https://your-domain.com

# Health Check
HEALTH_CHECK_INTERVAL=30000