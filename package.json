{
  "name": "mediasoup-video-call-heroku",
  "version": "1.0.0",
  "description": "MediaSoup Video Call Application optimized for Heroku deployment",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd videocallbackend && npm install --legacy-peer-deps && npm run build",
    "build:frontend": "cd videocall && npm install --legacy-peer-deps && npm run build && npm run export",
    "heroku-postbuild": "npm run build",
    "test": "echo 'No tests specified'",
    "db:migrate": "echo 'Database migrations would run here'",
    "logs": "heroku logs --tail",
    "deploy": "git push heroku main",
    "scale": "heroku ps:scale web=1"
  },
  "dependencies": {
    "express": "^4.18.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "socket.io": "^4.7.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0"
  },
  "engines": {
    "node": "20.x",
    "npm": "10.x"
  },
  "keywords": [
    "video",
    "webrtc",
    "mediasoup",
    "heroku",
    "nodejs",
    "nextjs",
    "real-time",
    "communication",
    "video-calling",
    "sfu"
  ],
