# NPM configuration for MediaSoup optimization
network-timeout=300000
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000
fetch-retries=5
maxsockets=1
audit=false
fund=false
progress=false
loglevel=warn

# MediaSoup specific optimizations - USE PRE-BUILT BINARIES
mediasoup_skip_worker_prebuilt_download=false
mediasoup_worker_bin_path=

# Force pre-built binaries for faster builds
target_platform=linux
target_arch=x64
cache_binary_host_mirror=https://github.com/versatica/mediasoup/releases/download/

# Build optimizations
package-lock=false
save-exact=false
engine-strict=true