# Development Dockerfile for Express Backend
FROM node:20-alpine

# Install necessary packages for mediasoup
RUN apk add --no-cache \
    make \
    gcc \
    g++ \
    python3 \
    py3-pip \
    linux-headers \
    curl

# Set working directory
WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm install

# Install ts-node-dev globally for development
RUN npm install -g ts-node-dev typescript

# Copy source code
COPY . .

# Create dist directory
RUN mkdir -p dist

# Expose ports
EXPOSE 3001
EXPOSE 10000-10100

# Start development server
CMD ["npm", "run", "dev"]
